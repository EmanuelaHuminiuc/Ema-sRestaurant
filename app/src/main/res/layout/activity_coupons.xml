<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#5EEFDA"
    tools:context=".CouponsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="activateFirstCoupon"
                android:contentDescription="coupons_1 Image"
                android:src="@drawable/coupons_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:id="@+id/firstCoupon"
                android:text="Coupons available : 1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="activateSecondCoupon"
                android:contentDescription="coupons_2 Image"
                android:src="@drawable/coupons_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="#FF0000"
                android:text="Coupons available : 0" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="activateThirdCoupon"
                android:contentDescription="coupons_3 Image"
                android:src="@drawable/coupons_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="#FF0808"
                android:text="Coupons available : 0" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:onClick="activateFourthCoupon"
                android:contentDescription="coupons_4 Image"
                android:src="@drawable/coupons_4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:textSize="10pt"
                android:gravity="center"
                android:textColor="#FF0000"
                android:text="Coupons available : 0" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout>